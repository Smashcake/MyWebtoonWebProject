@using MyWebtoonWebProject.Web.ViewModels.Webtoons
@model EditWebtoonInputModel
@{
    ViewBag.Title = "Edit " + Model.Title;
    var genres = this.Model.Genres.Select(g => new SelectListItem(g.Value, g.Key));
}

    <form method="post" class="col-md-9">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group ">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GenreId">Genre</label>
            <select asp-for="GenreId" class="form-control" asp-items="genres"></select>
        </div>

        <div class="form-group">
            <label asp-for="Synopsis">Synopsis</label>
            <textarea rows="4" asp-for="Synopsis" class="form-control"></textarea>
            <span asp-validation-for="Synopsis" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="UploadDay">Upload Day</label>
            <select asp-for="UploadDay" class="form-control"
                    asp-items="@Html.GetEnumSelectList<MyWebtoonWebProject.Data.Models.Enums.DayOfWeek>()">
            </select>
        </div>

        <input type="hidden" asp-for="OldTitle" />
        <input type="hidden" asp-for="WebtoonTitleNumber"/>

        <input type="submit" class="btn btn-primary" />
    </form>
