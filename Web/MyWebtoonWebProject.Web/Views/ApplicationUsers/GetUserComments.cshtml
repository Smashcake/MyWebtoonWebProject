@using System.Security.Claims
@using MyWebtoonWebProject.Web.ViewModels.Comments
@model ApplicationUserCommentsViewModel
@{
    ViewBag.Title = this.User.FindFirstValue(ClaimTypes.Name) + "'s Comments";
}

<ul class="list-md-group col-md-10">
    @foreach (var comment in Model.Comments)
    {
        <li class="list-group-item">
            <div class="card">
                <a asp-controller="Episodes" asp-action="GetEpisode" asp-route-WebtoonNumber="@comment.WebtoonTitleNumber" asp-route-EpisodeNumber="@comment.EpisodeNumber">@comment.WebtoonTitle # @comment.EpisodeNumber</a>
                <p><i class="fas fa-calendar"></i> Created on: @comment.CreatedOn.ToString("dd-MM-yyyy")</p>
                <p>@comment.CommentInfo</p>
                <div class="d-md-inline-flex">
                    <p><i class="fas fa-thumbs-up"></i> Likes: @comment.Likes</p>
                    <p><i class="fas fa-thumbs-down"></i> Dislikes: @comment.Dislikes</p>
                </div>
            </div>
        </li>
    }
</ul>
